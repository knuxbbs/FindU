@model ExternalLoginViewModel
@{
	ViewData["Title"] = "Register";
}

<h2>@ViewData["Title"]</h2>
<h4>Associate your @ViewData["LoginProvider"] account.</h4>
<hr />

<p class="text-info">
	You've successfully authenticated with <strong>@ViewData["LoginProvider"]</strong>.
	Please enter an email address for this site below and click the Register button to finish
	logging in.
</p>

<div class="row">
	<div class="col-md-4">
		<form asp-action="ExternalLoginConfirmation" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
			<div asp-validation-summary="All" class="text-danger"></div>
			<div class="form-group">
				<img src="@Model.CaminhoFoto" alt="User picture" />
			</div>
			<div class="form-group">
				<label asp-for="Email"></label>
				<input asp-for="Email" class="form-control" />
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Nome"></label>
				<input asp-for="Nome" class="form-control" />
				<span asp-validation-for="Nome" class="text-danger"></span>
			</div>
			<label asp-for="GeneroId" class="control-label">Gênero</label>
			<div class="form-group">
				<ul class="list-inline">
					@foreach (var item in Model.Generos)
					{
						<li>
							<input asp-for="GeneroId" type="radio" value="@item.Id" /> @item.Descricao
						</li>
					}
				</ul>
			</div>
			<div class="form-group">
				<label asp-for="DataNascimento"></label>
				<input asp-for="DataNascimento" class="form-control" />
				<span asp-validation-for="DataNascimento" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Sobre"></label>
				<textarea asp-for="Sobre" class="form-control" rows="5"></textarea>
				<span asp-validation-for="Sobre" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="GenerosInteresse" class="control-label">Interessado em</label>
				<ul class="list-inline">
					@for (var i = 0; i < Model.GenerosInteresse.Length; i++)
					{
						<li>
							<input id="chkAtividade_@Model.GenerosInteresse[i].Id" type="checkbox" asp-for="@Model.GenerosInteresse[i].IsChecked" />
							<label for="chkAtividade_@Model.GenerosInteresse[i].Id">@Model.GenerosInteresse[i].Text</label>
							<input id="atividadeId_@Model.GenerosInteresse[i].Id" type="hidden" asp-for="@Model.GenerosInteresse[i].Id" />
							<input id="txtAtividade_@Model.GenerosInteresse[i].Id" type="hidden" asp-for="@Model.GenerosInteresse[i].Text" />
						</li>
					}
				</ul>
			</div>
			<button type="submit" class="btn btn-default">Register</button>
		</form>
	</div>
</div>

@section Scripts {
	@await Html.PartialAsync("_ValidationScriptsPartial")
}
