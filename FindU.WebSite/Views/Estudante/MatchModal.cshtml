@model FindU.Application.ViewModels.EstudanteDetailsViewModel

<div id="match-modal" class="modal fade" tabindex="-1" role="dialog">
	<div class="modal-dialog modal-sm" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<h4 class="modal-title">Match!</h4>
			</div>
			<div class="modal-body">
				<div class="form-group">
					<label asp-for="@Model.Nome" class="control-label"></label>
					<p class="form-control-static">@Model.Nome</p>
				</div>
				<div class="form-group">
					<label asp-for="@Model.Curso" class="control-label"></label>
					<p class="form-control-static">@Model.Curso</p>
				</div>
				@if (!string.IsNullOrEmpty(Model.PhoneNumber))
				{
					<div class="form-group">
						<label asp-for="@Model.PhoneNumber" class="control-label"></label>
						<p class="form-control-static">@Model.PhoneNumber</p>
					</div>
				}
				<div class="form-group">
					<label asp-for="@Model.Facebook" class="control-label"></label>
					<p class="form-control-static">www.facebook.com/@Model.UsuarioId</p>
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">OK</button>
			</div>
		</div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
</div><!-- /.modal -->